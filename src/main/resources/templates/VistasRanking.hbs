<html data-bs-theme="light" lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>VistaRankings</title>
    <link rel="stylesheet" href="../static/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../static/assets/css/styles.min.css">
    <link rel="stylesheet" href="../static/assets/css/custom_styles.css">
    <script src = "../Fire-Base/validador/logout.js"></script>
</head>
<body style="background-color:#eee;">
<nav class="navbar navbar-expand-md bg-dark py-3" data-bs-theme="dark">
    <div class="container"><a class="navbar-brand d-flex align-items-center" href="https://www.youtube.com/watch?v=dQw4w9WgXcQ"><span>Grupo 5</span></a><button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-5"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navcol-5">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item"><a class="nav-link active" href="#">Rankings</a></li>
                <li class="nav-item"><a class="nav-link" href="./perfil">Perfil</a></li>
                <li class="nav-item"><a class="nav-link" href="#" id="enlaceLogout">Salir</a></li>
            </ul>
        </div>
    </div>
</nav>
<div class="container py-4 py-xl-5">
    <div class="row mb-5">
        <div class="col-md-8 col-xl-6 text-center mx-auto">
            <h2>Rankings</h2>
        </div>
    </div>
    <div class="row gy-4 row-cols-1 row-cols-md-2 row-cols-xl-3">
        <div class="col">
            <div class="card">
                <div class="card-body p-4">
                    <h4 class="card-title">Cantidad de incidentes</h4>
                    <p class="card-text">Este ranking muestra las entidades con mayor cantidad de incidentes reportados en la semana.</p>
                    <div class="d-flex"></div>
                    <button class="btn btn-primary" type="button" style="padding-left: 78px; padding-right: 75px; margin-right: 50px; margin-left: 0px;" data-bs-target="#modal-1" data-bs-toggle="modal">Ver</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body p-4">
                    <h4 class="card-title">Tiempo promedio</h4>
                    <p class="card-text">Este ranking muestra las entidades con mayor tiempo promedio de tiempo de cierre de incidentes en la semana.</p>
                    <button class="btn btn-primary d-xl-flex justify-content-xl-center align-items-xl-center" type="button" style="padding-left: 78px; padding-right: 75px; margin-right: 50px; margin-left: 0px;" data-bs-target="#modal-2" data-bs-toggle="modal">Ver</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body p-4">
                    <h4 class="card-title">Cantidad de afectados</h4>
                    <p class="card-text">Este ranking muestra el grado de impacto que tiene el no funcionamiento de los servicios, como afecta a las comunidades.</p>
                    <button class="btn btn-primary" type="button" style="padding-left: 78px; padding-right: 75px; margin-right: 50px; margin-left: 0px;" data-bs-target="#modal-3" data-bs-toggle="modal">Ver</button>
                </div>
            </div>
        </div>
    </div>

    <div id ="rankingsConVue">
        <div class="modal fade" role="dialog" tabindex="-1" id="modal-1">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Ranking existentes</h4>
                        <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body" >
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Acciones</th>
                                    <th>Fecha Creacion</th>
                                </tr>
                                </thead>
                                <tbody v-for={{size}}>
                                {{#each cantidadDeIncidentes}}
                                <tr>
                                    <td>
                                        <a href="http://localhost:4567/rankingLiviano/{{codigo}}">
                                        <button class="btn btn-primary" type="button" >Ver</button>
                                        <!--@click="verRanking(ranking.codigo)"-->
                                        </a>
                                    </td>
                                    <td> {{fecha}}</td>
                                </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-light" type="button" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" role="dialog" tabindex="-1" id="modal-2">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Ranking existentes</h4>
                        <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body" >
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Acciones</th>
                                    <th>Fecha Creacion</th>
                                </tr>
                                </thead>
                                <tbody v-for={{rankings.size}}>
                                {{#each tiempoPromedio}}
                                <tr>
                                    <td>
                                        <a href="http://localhost:4567/rankingLiviano/{{codigo}}">
                                        <button class="btn btn-primary" type="button" >Ver</button>
                                        </a>
                                    </td>
                                    <td> {{fecha}}</td>
                                </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-light" type="button" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" role="dialog" tabindex="-1" id="modal-3">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Ranking existentes</h4>
                        <button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Acciones</th>
                                    <th>Fecha Creacion</th>
                                </tr>
                                </thead>
                                <tbody v-for={{rankings.size}}>
                                {{#each rankings}}
                                <tr>
                                    <td>
                                        <a href="http://localhost:4567/rankingLiviano/{{codigo}}">
                                        <button class="btn btn-primary" type="button">Ver</button>
                                        </a>
                                    </td>
                                    <td> {{fecha}}</td>
                                </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-light" type="button" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<style>
    .btn-primary a {
      color: white; /* Color del texto blanco */
      text-decoration: none; /* Sin subrayado */
    }
  </style>
<script type="module">
    import { logout } from '../Fire-Base/validador/logout.js';

    document.addEventListener('DOMContentLoaded', function() {
        // Asigna la función logout al evento click del enlace.
        const enlaceLogout = document.getElementById('enlaceLogout');

        if (enlaceLogout) {
            enlaceLogout.addEventListener('click', function(event) {
                event.preventDefault(); // Evita la navegación si es un enlace.
                logout(); // Llama a la función logout.
            });
        } else {
            console.error("Elemento con ID 'enlaceLogout' no encontrado.");
        }
    });
</script>
</body>
</html>
